<%= render 'shared/errors', obj: @case %>

<div class='row'>
  <div class='col-xs-12'>
    <%= form_for([@clinician, @case, @note], :html => {class: "form-horizontal", role: "form"}) do |f| %>
      <div class="form-group">
        <div class="control-label col-sm-2">
          <%= f.label :subject %>
        </div>
        <div class="col-sm-8">
          <%= f.text_field :subject, class: "form-control", autofocus: true %>
        </div>
      </div>
      <div class="form-group">
        <div class="control-label col-sm-2">
          <%= f.label :note_text %>
        </div>
        <div class="col-sm-8">
          <%= f.text_area :note_text, rows: 10, class: "form-control" %>
        </div>
      </div>
      <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
          <%= link_to "Cancel", clinician_case_notes_path(@clinician_id, @case_id), class: "btn btn-danger btn-lg"%>
          <%= f.submit class: 'btn btn-primary btn-lg' %>
        </div>
      </div>
    <% end %>
  </div>
</div>
