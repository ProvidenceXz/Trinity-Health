<h2 class="text-center">Patient Name: <strong><%= @case.name %></strong></h2>
<div class="well col-xs-8 col-xs-offset-2">
  
    <h4><strong>Age: <%= @case.age %></strong></h4>
    <h4><strong>Gender: <%= @case.gender %></strong></h4>
  <h4 class="diagnosis"><strong>Diagnosis:</strong></h4>
  <%= simple_format(@case.diagnosis) %>
  <div class="case-actions">
    <%= link_to "Back to list", cases_path, class: "btn btn-xs btn-success" %>
    <%= link_to "Edit", edit_case_path(@case), class: "btn btn-xs btn-primary"%>
    <%= link_to "Delete", case_path(@case), method: :delete, 
                          data: { confirm: "Are you sure you want to delete this case?"}, 
                          class: "btn btn-xs btn-danger" %>
    <%= link_to "Notes", case_notes_path(@case), class: "btn btn-xs btn-primary"%>
 </div>
  

