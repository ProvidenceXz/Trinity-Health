<h2 class="text-center">Patient Name: <strong><%= @case.name %></strong></h2>

<div class="row">
  <div class="well col-xs-8">
    <h4><strong>Age: <%= @case.age %></strong></h4>
    <h4><strong>Gender: <%= @case.gender %></strong></h4>
  <h4 class="diagnosis"><strong>Diagnosis:</strong></h4>
  <%= simple_format(@case.diagnosis) %>
  <h4 class="disease_characteristic"><strong>Disease Characteristics:</strong></h4>
  <%= simple_format(@case.disease_characteristic) %>
  <h4 class="treatment_history"><strong>Treatment History:</strong></h4>
  <%= simple_format(@case.treatment_history) %>
  <h4 class="past_medical_history"><strong>Past Medical History:</strong></h4>
  <%= simple_format(@case.past_medical_history) %>
  <h4 class="Attachment"><strong>Attachments:</strong></h4>
  <% @attachments.each do |attachment| %>
      <%= image_tag attachment.document.url(:thumb) %>
  <% end %>
  <div class="case-actions">
    <%= link_to "Back to list", clinician_cases_path(@clinician_id), class: "btn btn-xs btn-success" %>
    <% if @allowed %>
      <%= link_to "Edit", edit_clinician_case_path(@clinician_id, @case.id), class: "btn btn-xs btn-primary"%>
      <%= link_to "Delete", clinician_case_path(@clinician_id, @case.id), method: :delete, 
                            data: { confirm: "Are you sure you want to delete this case?"}, 
                            class: "btn btn-xs btn-danger" %>
    <% end %>

    <%= link_to "Notes", clinician_case_notes_path(@clinician_id, @case.id), class: "btn btn-xs btn-primary"%>
 </div>
  
   
</div>

  <div id="collaborator-column">
    <div class="well col-xs-3 col-xs-offset-1">
      <h4><strong>Members</strong></h4>
      <div class="collaborators">
        <ul>
          <% @case.clinicians.each do |clinician| %>
          <li><%= link_to clinician.name, clinician_path(clinician) %></li>
          <% end %>
        </ul>
      </div><!-- /.collaborators -->
      <% if @allowed %>
        <%= link_to "Add collaborator", add_collaborator_path(@clinician_id, @case.id), class: "btn btn-primary", :id => 'add-collaborator' %>
      <% end %>
    </div>
 </div>
</div><!-- /.row -->
