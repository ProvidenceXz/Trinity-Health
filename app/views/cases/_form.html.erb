<%= render 'shared/errors', obj: @case %>

<div class='row'>
  <div class='col-xs-12'>
    <%= form_for(@case, :html => {class: "form-horizontal", role: "form"}) do |f| %>
      <div class="form-group">
        <div class="control-label col-sm-2">
          <%= f.label :name %>
        </div>
        <div class="col-sm-8">
          <%= f.text_field :name, class: "form-control", placeholder: "Name of patient", autofocus: true %>
        </div>
      </div>
      <div class="form-group">
        <div class="control-label col-sm-2">
          <%= f.label :age %>
        </div>
        <div class="col-sm-8">
          <%= f.number_field :age, in: 1..100, class: "form-control", placeholder: "Age of patient (Number only) "%>
        </div>
      </div>
      <div class="form-group">
        <div class="control-label col-sm-2">
          <%= f.label :gender %>
        </div>
        <div class="col-sm-8">
          <%= f.select :gender, [ 'Male', 'Female' ] %>
        </div>
      </div>
      <div class="form-group">
        <div class="control-label col-sm-2">
          <%= f.label :diagnosis %>
        </div>
        <div class="col-sm-8">
          <%= f.text_area :diagnosis, rows: 10, class: "form-control", placeholder: "Diagnosis of patient" %>
        </div>
      </div>
      <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
          <%= f.submit class: 'btn btn-primary btn-lg' %>
        </div>
      </div>
    <% end %>
    
    <div class="col-xs-4 col-xs-offset-5">
     [ <%= link_to "Return to Cases list", cases_path %> ]
    </div>
  </div>
</div>


