<h1>Editing case</h1>

<%= form_for :case, url: case_path(@case), method: :patch do |f| %>
    <% if @case.errors.any? %>
        <div id="error_explanation">
            <h2>
                <%= pluralize(@case.errors.count, "error") %> prohibits this article from being saved.
            </h2>
            <ul>
                <% @case.errors.full_messages.each do |msg| %>
                    <li><%= msg %></li>
                <% end %>
            </ul>
        </div>
    <% end %>
    <p>
    <%= f.label :name %></br>
    <%= f.text_field :name %>
    </p>
      
    <p>
    <%= f.label :age %></br>
    <%= f.text_field :age %>
    </p>
      
    <p>
    <%= f.label :gender %></br>
    <%= f.select :gender, [ 'Male', 'Female' ] %>
    </p>
      
    <p>  
    <%= f.label :diagnosis %></br>
    <%= f.text_area:diagnosis %>
    </p>
    
    <p>
        <%= f.submit 'Save' %>
    </p>
<% end %>
<%= link_to "Back to case list", cases_path %>
    